<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Flow Tests Suite" parallel="tests" thread-count="2">
    <test name="Valid Tests" parallel="instances" thread-count="1" group-by-instances="true">
        <classes>
            <class name="org.example.tests_scripts.FlowTestFactory"/>
        </classes>
    </test>
    <test name="Invalid Tests" parallel="methods" thread-count="2">
        <classes>
            <class name="org.example.tests_scripts.InvalidTests"/>
        </classes>
    </test>
</suite>